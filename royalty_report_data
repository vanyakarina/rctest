    <div class="content">
        <h1>Royalty Report Data</h1>

        <h2>Select Period</h2>
        <select id="period" onchange="loadRoyaltyReport()">
            <!-- Options will be filled by JavaScript -->
        </select>

        <br><br>

        <h2>Royalty Breakdown for Selected Period</h2>
        <table id="royaltyReportTable">
            <thead>
                <tr>
                    <th>Song Title</th>
                    <th>Songwriter</th>
                    <th>Status</th>
                    <th>Digital Royalty</th>
                    <th>Synch Royalty</th>
                    <th>Mechanical Royalty</th>
                    <th>Performance Royalty</th>
                    <th>Total Royalty</th>
                </tr>
            </thead>
            <tbody>
                <!-- Royalty data will be added here -->
            </tbody>
        </table>
    </div>

    <script>
        let royaltyReports = JSON.parse(localStorage.getItem('royaltyReports')) || [];

        function populatePeriodOptions() {
            const periodSelect = document.getElementById('period');
            let startYear = 2019;
            let endYear = 2040;
            let periods = ["Jan-Jun", "Jul-Dec"];
            
            for (let year = startYear; year <= endYear; year++) {
                periods.forEach(period => {
                    const option = document.createElement('option');
                    option.value = `${period} ${year}`;
                    option.textContent = `${period} ${year}`;
                    periodSelect.appendChild(option);
                });
            }
        }

        function loadRoyaltyReport() {
            const selectedPeriod = document.getElementById('period').value;
            const report = royaltyReports.find(r => r.period === selectedPeriod);

            const tableBody = document.getElementById('royaltyReportTable').getElementsByTagName('tbody')[0];
            tableBody.innerHTML = '';

            if (report && report.data) {
                report.data.forEach(data => {
                    const row = tableBody.insertRow();
                    row.insertCell(0).textContent = data.songTitle;
                    row.insertCell(1).textContent = data.name;
                    row.insertCell(2).textContent = data.status;
                    row.insertCell(3).textContent = data.digital.toFixed(2);
                    row.insertCell(4).textContent = data.synch.toFixed(2);
                    row.insertCell(5).textContent = data.mechanical.toFixed(2);
                    row.insertCell(6).textContent = data.performance.toFixed(2);
                    row.insertCell(7).textContent = data.total.toFixed(2);
                });
            } else {
                const row = tableBody.insertRow();
                const cell = row.insertCell(0);
                cell.colSpan = 8;
                cell.textContent = 'No data available for this period.';
            }
        }

        window.onload = function() {
            populatePeriodOptions();
            loadRoyaltyReport();
        };
    </script>
</body>

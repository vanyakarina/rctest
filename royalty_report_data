    <div class="content">
        <h1>Royalty Report Data</h1>
        <table id="reportTable">
            <thead>
                <tr>
                    <th>Song Title</th>
                    <th>Songwriter</th>
                    <th>Status</th>
                    <th>Digital Royalty</th>
                    <th>Synch Royalty</th>
                    <th>Mechanical Royalty</th>
                    <th>Performance Royalty</th>
                    <th>Total Royalty</th>
                </tr>
            </thead>
            <tbody>
                <!-- Submitted data will be filled by JavaScript -->
            </tbody>
        </table>
    </div>

    <script>
        function loadRoyaltyReportData() {
            const reportTableBody = document.getElementById('reportTable').getElementsByTagName('tbody')[0];
            const data = JSON.parse(localStorage.getItem('royalties')) || [];

            data.forEach(record => {
                const row = reportTableBody.insertRow();
                row.insertCell(0).textContent = record.songTitle;
                row.insertCell(1).textContent = record.name;
                row.insertCell(2).textContent = record.status;
                row.insertCell(3).textContent = record.digital.toFixed(2);
                row.insertCell(4).textContent = record.synch.toFixed(2);
                row.insertCell(5).textContent = record.mechanical.toFixed(2);
                row.insertCell(6).textContent = record.performance.toFixed(2);
                row.insertCell(7).textContent = record.total.toFixed(2);
            });
        }

        document.addEventListener('DOMContentLoaded', () => {
            loadRoyaltyReportData();
        });
    </script>
</body>
